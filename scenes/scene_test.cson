# Raytracer scene file example
# Python-like indentation
# ****************************

# - Angles are in degrees
# - Can define matters
# - Can attach a matter to an element
# - Can override properties from attached matter
# - If no specified matter, use DEFAULT matter


# Position and Transformation
# x
# y
# z
# rotX
# rotY
# rotZ


# Specific Properties

# radius
# aperture
# width
# height
# depth
# faces


# Matter Properties
# color
# opacity
# texture
# reflection
# refraction
# refract_index
# ambient
# diffuse
# specular


# Scene Description
scene:
    title: "Trinity"
    width: 1200
    height: 800

    # Camera
    camera:
        x: 0
        y: 50
        z: 10
        rotX: 0
        rotY: -20
        rotZ: 0

    # Lights
    light:
        x: 255
        y: 2
        z: 1
        type: spot
        color: #45F4C2

    # Matters
    matter:
        name: "iron"
        texture: "./textures/iron.xpm"
        reflection: 0.3
        refraction: 0.0
        refract_index: 1.2
        ambient: 1.0
        diffuse: 0.8
        specular: 0.8

    matter:
        name: "glass"
        texture: "./textures/glass.xpm"
        reflection: 0.2
        refraction: 0.8

    matter:
        name: "grass"
        texture: "./textures/grass.xpm"
        reflection: 0.0
        refraction: 0.0

    matter:
        name: "wood"
        texture: "./textures/wood.xpm"
        opacity: 1.0
        reflection: 0.0
        refraction: 0.0
        ambient: 0.07
        diffuse: 1.0
        specular: 0.01

    matter:
        name: "sky"
        texture: "./textures/sky.xpm"
        reflection: 0.0
        refraction: 0.0
        ambient: 1.0
        diffuse: 0.0
        specular: 0.0

    # Defining a skybox
    sphere:
        x: 0
        y: 0
        z: 0
        radius: 60000
        rotX: 0
        rotY: 0
        rotZ: 40
        matter: "sky"

    # Defining a ground
    plane:
        x: 0
        y: 0
        z: 0
        rotX: 0
        rotY: 0
        rotZ: 0
        # texture: "./textures/grass.xpm"
        matter: "sky"
        diffuse 0.5
        specular: 1.0

    # This will make an object with default properties
    plane:

    cone:
        x: 255
        y: 2
        z: 1
        aperture: 120
        rotX: 320
        rotY: 120
        rotZ: 0

    plane:
        x: 255
        y: 2
        z: 1
        rotX: 320
        rotY: 120
        rotZ: 0
        color: #4F5F6F

    cylinder:
        x: 255
        y: 2
        z: 1
        rotX: 320
        rotY: 120
        rotZ: 0
        color: #4F5F6F
        texture: "./textures/sky.xpm"

    object:
        url: "./bottle.obj"
        x: 23
        y: 65
        z: 54
        rotX: 320
        rotY: 120
        rotZ: 0
